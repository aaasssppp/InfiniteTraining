@model IEnumerable<CodeChallenge9_Question1.Models.Customer>

@{
    ViewBag.Title = "Customers in Germany";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Customers in Germany</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Company</th>
            <th>Contact</th>
            <th>City</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CustomerID</td>
                <td>@c.CompanyName</td>
                <td>@c.ContactName</td>
                <td>@c.City</td>
                <td>@c.Phone</td>
            </tr>
        }
    </tbody>
</table>
